[Unit]
Description=IOT2050 Extended IO Server daemon
# Only run on IOT2050-SM variant
ConditionFirmware=device-tree-compatible(siemens,iot2050-advanced-sm)
Requires=iot2050-eiofsd.service
After=iot2050-eiofsd.service
BindsTo=iot2050-eiofsd.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 -u /usr/bin/iot2050-eio-time-syncing
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
